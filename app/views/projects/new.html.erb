<h2>New Project</h2>
<%= form_for(@project) do |f| %>
<% if @project.errors.any? %>

	<%=pluralize(@project.errors.count,"error")  %>
	<% @project.errors.full_messages.each do |error| %>
		<%= error %>
	<% end %>

<% end %>
<p>
	<%= f.label :name %><br />
	<%= f.text_field :name %>
</p>
<p>
	<%= f.label :description %><br />
<%= f.text_field :description %></p>
<%= f.submit %>
<% end %>